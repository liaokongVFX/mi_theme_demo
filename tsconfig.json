{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@theme/*": [
                "src/theme/lib/client/components/*"
            ],
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        ".vitepress/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}